{
  "compilerOptions": {
    "target": "es2016",                                 
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",                              
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": false,                                      
    "skipLibCheck": true,
     "noEmitOnError": false 
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
